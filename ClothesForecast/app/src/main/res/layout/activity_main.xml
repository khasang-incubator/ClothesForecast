<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_16"
    android:paddingLeft="@dimen/activity_horizontal_margin_16"
    android:paddingRight="@dimen/activity_horizontal_margin_16"
    android:paddingTop="@dimen/activity_vertical_margin_16"
    tools:context="com.khasang_incubator.clothesforecast.MainActivity">

    <LinearLayout
        android:id="@+id/llRequestParameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="City Name" />

        <Button
            android:id="@+id/btnFetch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="FETCH" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/llRequestParameters">

        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:text="Hello World!" />

    </ScrollView>

    <Button
        android:id="@+id/btn_show_weather"
        android:layout_centerHorizontal="true"
        android:onClick="Show_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:text="@string/show_weather" />

</RelativeLayout>
